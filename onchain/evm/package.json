{
	"name": "template-commit-reveal-contracts",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/js/index.d.ts",
			"default": "./dist/js/index.js"
		},
		"./deploy/*": "./dist/deploy/*",
		"./rocketh/*": "./dist/rocketh/*",
		"./deployments/*": "./deployments/*",
		"./artifacts/*": "./generated/artifacts/*",
		"./abis/*": "./generated/abis/*"
	},
	"files": [
		"dist",
		"deployments",
		"generated"
	],
	"devDependencies": {
		"@nomicfoundation/hardhat-keystore": "^3.0.1",
		"@nomicfoundation/hardhat-network-helpers": "^3.0.0",
		"@nomicfoundation/hardhat-node-test-runner": "^3.0.8",
		"@nomicfoundation/hardhat-viem": "^3.0.0",
		"@openzeppelin/contracts": "^5.4.0",
		"@rocketh/deploy": "^0.17.7",
		"@rocketh/doc": "^0.17.15",
		"@rocketh/export": "^0.17.15",
		"@rocketh/node": "^0.17.15",
		"@rocketh/proxy": "^0.17.11",
		"@rocketh/read-execute": "^0.17.7",
		"@rocketh/router": "^0.17.9",
		"@rocketh/verifier": "^0.17.15",
		"@types/node": "^25.0.6",
		"abitype": "^1.2.3",
		"as-soon": "^0.0.11",
		"cross-var": "^1.1.0",
		"earl": "^2.0.0",
		"eip-1193": "^0.6.5",
		"forge-std": "github:foundry-rs/forge-std#v1.9.4",
		"handlebars": "^4.7.8",
		"hardhat": "^3.1.3",
		"hardhat-deploy": "^2.0.0-next.61",
		"ldenv": "^0.3.16",
		"prettier": "^3.7.4",
		"prettier-plugin-solidity": "2.2.1",
		"remote-procedure-call": "^0.1.1",
		"rocketh": "^0.17.12",
		"set-defaults": "^0.0.5",
		"solidity-kit": "^0.5.7",
		"tsx": "^4.21.0",
		"typescript": "^5.9.2",
		"viem": "^2.44.1",
		"wait-on": "^9.0.1",
		"zellij-launcher": "^0.0.1"
	},
	"scripts": {
		"prepare": "set-defaults .vscode && pnpm compile",
		"---------------------- INTERNAL ----------------------": "",
		":deploy+export": "cross-var pnpm hardhat --network $MODE deploy --skip-prompts && cross-var rocketh-export -e $MODE",
		"---------------------- DEV ---------------------- ": "",
		"local_node": "ldenv -d localhost pnpm hardhat node",
		"compile": "hardhat --show-stack-traces compile",
		"compile:watch": "as-soon -w src pnpm compile",
		"fork:execute": "ldenv tsx @=HARDHAT_FORK=@@MODE @@",
		"fork:deploy": "pnpm compile --build-profile production && ldenv hardhat @=HARDHAT_FORK=@@MODE deploy @@",
		"deploy:dev": "ldenv -d localhost pnpm :deploy+export @@",
		"deploy:watch": "wait-on ./generated && ldenv -m localhost pnpm as-soon -w generated -w deploy pnpm run deploy:dev @@MODE @@",
		"test": "hardhat --network test test",
		"test:watch": "wait-on ./generated && as-soon -w generated -w test hardhat test --no-compile",
		"typescript:watch": "as-soon -w js pnpm typescript",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"tsx": "tsx",
		"---------------------- PRODUCTION ---------------------- ": "",
		"typescript": "tsc --project ./tsconfig.json",
		"docgen": "ldenv -m hardhat pnpm run deploy hardhat --save-deployments true --skip-prompts ~~ pnpm rocketh-doc -e @@MODE --except-suffix _Implementation,_Proxy,_Router,_Route ~~ @@",
		"execute": "ldenv -n HARDHAT_NETWORK pnpm tsx @@",
		"deploy": "pnpm compile --build-profile production && ldenv pnpm hardhat --network @@MODE deploy @@",
		"verify": "ldenv pnpm rocketh-verify -e @@MODE @@",
		"export": "ldenv pnpm rocketh-export -e @@MODE @@",
		"---------------------- START ---------------------- ": "",
		"stop": "zellij kill-session $npm_package_name",
		"start": "zellij-launcher a $npm_package_name || zellij -n zellij.kdl -s $npm_package_name"
	}
}