{
	"name": "dgame-contracts",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"devDependencies": {
		"@nomicfoundation/hardhat-keystore": "^3.0.1",
		"@nomicfoundation/hardhat-network-helpers": "^3.0.0",
		"@nomicfoundation/hardhat-node-test-runner": "^3.0.2",
		"@nomicfoundation/hardhat-viem": "^3.0.0",
		"@openzeppelin/contracts": "^5.4.0",
		"@rocketh/deploy": "^0.14.0",
		"@rocketh/doc": "^0.14.1",
		"@rocketh/export": "^0.14.1",
		"@rocketh/proxy": "^0.14.0",
		"@rocketh/read-execute": "^0.14.0",
		"@rocketh/router": "^0.14.0",
		"@rocketh/verifier": "^0.14.1",
		"@types/node": "^24.3.0",
		"abitype": "^1.0.9",
		"as-soon": "^0.0.11",
		"earl": "^1.3.0",
		"eip-1193": "^0.6.3",
		"forge-std": "github:foundry-rs/forge-std#v1.9.4",
		"hardhat": "^3.0.3",
		"hardhat-deploy": "^2.0.0-next.37",
		"ldenv": "^0.3.12",
		"prettier": "^3.6.2",
		"prettier-plugin-solidity": "^2.1.0",
		"remote-procedure-call": "^0.1.1",
		"rocketh": "^0.14.1",
		"set-defaults": "^0.0.5",
		"solidity-kit": "^0.5.3",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"viem": "^2.37.0",
		"wait-on": "^8.0.4",
		"zellij-launcher": "^0.0.1"
	},
	"scripts": {
		"prepare": "set-defaults .vscode && pnpm compile",
		"docgen": "ldenv -m hardhat pnpm run deploy hardhat --save-deployments true --skip-prompts ~~ pnpm rocketh-doc -n @@MODE --except-suffix _Implementation,_Proxy,_Router,_Route ~~ @@",
		"local_node": "hardhat node",
		"compile": "hardhat compile",
		"compile:watch": "as-soon -w src pnpm compile",
		"execute": "ldenv -n HARDHAT_NETWORK -m localhost tsx @@",
		"fork:execute": "ldenv -m localhost tsx @=HARDHAT_FORK=@@MODE @@",
		"deploy": "pnpm compile --build-profile production && ldenv hardhat --network @@MODE deploy @@",
		"fork:deploy": "pnpm compile && ldenv hardhat @=HARDHAT_FORK=@@MODE --network @@MODE deploy @@",
		"deploy:on": "hardhat --network $MODE deploy --skip-prompts && rocketh-export -n $MODE",
		"deploy:dev": "ldenv pnpm deploy:on @@",
		"deploy:watch": "wait-on ./generated && ldenv -m localhost as-soon -w generated -w deploy pnpm run deploy:dev @@MODE @@",
		"verify": "ldenv rocketh-verify -n @@MODE @@",
		"test": "hardhat test",
		"test:watch": "wait-on ./generated && as-soon -w generated -w test hardhat test --no-compile",
		"export": "ldenv rocketh-export -n @@MODE @@",
		"export:ts": "ldenv rocketh-export -n @@MODE --ts @@",
		"export-script-data": "ldenv rocketh-export -n @@MODE --ts ./scripts/data/contracts.ts @@",
		"start": "zellij-launcher --layout zellij.kdl a $npm_package_name || zellij --layout zellij.kdl -s $npm_package_name",
		"stop": "zellij kill-session $npm_package_name",
		"format:check": "prettier --check .",
		"format": "prettier --write ."
	}
}
