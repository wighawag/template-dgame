layout {
	pane split_direction="vertical" {
		pane command="bash"  {
			args "-c" "${SHELL-bash}"
		}
	}
	pane split_direction="vertical" {
		pane command="bash"  {
			args "-c" "pnpm web:dev; cd web; ${SHELL-bash}"
		}
		pane command="bash"  {
			args "-c" "pnpm --filter ./web check:watch; cd web; ${SHELL-bash}"
		}
	}
}
