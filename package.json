{
  "name": "dgame-monorepo",
  "version": "0.0.0",
  "description": "A Game",
  "private": true,
  "type": "module",
  "devDependencies": {
    "ldenv": "^0.3.12",
    "set-defaults": "^0.0.5",
    "syncpack": "^13.0.4",
    "zellij-launcher": "^0.0.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "scripts": {
    "prepare": "set-defaults .vscode",
    "preinstall": "npx only-allow pnpm",
    "---------------------- INSTALL ----------------------": "",
    "sync-deps": "syncpack fix-mismatches && pnpm -r format:fix",
    "---------------------- FORMAT ----------------------": "",
    "format": "prettier --write . && pnpm -r format",
    "format:check": "prettier --check . && pnpm -r format:check",
    "---------------------- WEB ----------------------": "",
    "web:dev": "ldenv pnpm --filter ./web dev",
    "web:build": "ldenv pnpm --filter ./web build",
    "---------------------- ONCHAIN ----------------------": "",
    "onchain:build": "ldenv pnpm --filter ./onchain/evm compile ~~ pnpm --filter ./onchain/evm typescript ~~ pnpm --filter ./onchain/evm export @@MODE --ts ../../web/src/contracts.ts ~~ @@",
    "---------------------- SERVICES ----------------------": "",
    "push-notification": "pnpm --filter ./services/push-notification dev",
    "missiv": "pnpm --filter ./services/missiv dev",
    "---------------------- DEPLOY ----------------------": "",
    "build": "ldenv -d localhost pnpm onchain:build @@MODE ~~ pnpm web:build ~~ @@",
    "serve": "pnpm run --filter ./web serve",
    "---------------------- RUN FULL LOCAL SETUP ----------------------": "",
    "stop": "zellij kill-session $npm_package_name",
    "start:pnpm": "pnpm -r dev",
    "start": "zellij-launcher a $npm_package_name || zellij -n zellij.kdl -s $npm_package_name"
  }
}
